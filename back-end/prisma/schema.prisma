generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  category    Category
  image       String
  author      String
  createdAt   DateTime @default(now())
  cards       Card[]

  @@index([category])
  @@index([createdAt])
}

model Card {
  id          Int    @id @default(autoincrement())
  title       String
  description String @db.Text
  gif         String
  author      String
  votes       Int    @default(0)


  board       Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId     Int

  @@index([boardId])
}

enum Category {
  celebration
  thank_you
  inspiration
}
